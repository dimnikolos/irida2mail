{
  "manifest_version": 3,
  "name": "Email Button Extension",
  "version": "1.0",
  "description": "Adds a button to send an email using mailto link.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["https://iridacloud.gov.gr/*"],
      "js": ["content.js"]
    }
  ]
}
